# dndsandbox-tts Configuration
# Copy this file to .env and adjust values as needed

# Server settings
HOST=0.0.0.0
PORT=8100

# Authentication (optional)
# API_KEY=your-secret-key
REQUIRE_AUTH=false

# Model settings
DEFAULT_MODEL=bark
# MODELS_CACHE_DIR=/root/.cache/dndsandbox-tts

# Audio settings
DEFAULT_SAMPLE_RATE=24000
OUTPUT_FORMAT=mp3

# Performance settings
# Device options: auto, cuda, cuda:0, cpu
DEVICE=auto
PRELOAD_MODELS=true
USE_FP16=true

# Logging
LOG_LEVEL=INFO
# Output logs in JSON format (recommended for production)
JSON_LOGS=false

# ========================================
# Caching settings
# ========================================

# Enable audio caching for repeated requests
CACHE_ENABLED=true
# Maximum number of cached audio entries
CACHE_MAX_ENTRIES=100
# Maximum cache memory in MB
CACHE_MAX_MEMORY_MB=500
# Cache entry time-to-live in seconds (1 hour default)
CACHE_TTL_SECONDS=3600

# ========================================
# Engine-specific settings
# ========================================

# Bark engine settings (prefix: BARK_)
# Use smaller models for faster inference (lower quality)
BARK_USE_SMALL_MODELS=false
# Max characters per chunk (100-500). Larger = faster but may reduce quality
BARK_CHUNK_SIZE=250
# Temperature settings (0.0-1.0) - higher = more variation
BARK_SEMANTIC_TEMPERATURE=0.7
BARK_COARSE_TEMPERATURE=0.7
BARK_FINE_TEMPERATURE=0.5
